@model User;
@{
    ViewData["Title"] = "Signup";
}

<style>
    .body {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }
   
    .container {
        display: flex;
        width: 100vw;
        height: 80vh; 
        transform: scale(1.089);
        margin-top: 1.3em;
        margin-left: 2.75em;
        z-index: 0;
    }
   
    .left-side {
        flex: 2;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        background-image: url('/images/PLM-RIGHT-INDEX.jpg'); 
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
   
    .left-side img {
        margin-top: -7.5em;
        width: 80%;
        max-width: 600px;
        height: auto;
        border-radius: 10px;
        margin-left: 50px;
    }
   
    .right-side {
        display: flex;
        flex-direction: column;
        align-items: flex;
        background-color: #fbf6f8;
        padding: 30px;
        width: 100%;
        max-width: 472px;
        overflow-y: scroll;
    }
    .right-side::-webkit-scrollbar {
        width: 10px;
    }
    .right-side::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 5px;
    }
    .right-side::-webkit-scrollbar-thumb {
        background-color: #818181;
        border-radius: 5px;
    }
    .right-side::-webkit-scrollbar-thumb:hover {
        background-color: #818181;
    }
   
    .register-title {
        font-size: 28px;
        color: #4f68d9;
        margin-bottom: 20px;
        font-family: 'PoppinsMedium', sans-serif; 
        font-weight: 700;
    }
   
    .register-form {
        width: 100%;
    }
   
    .form-label {
        font-size: 14px;
        color: #a09f9f;
        margin-bottom: 5px;
        display: block;
        font-family: 'TTForsRegular', sans-serif;
    }
   
    .input-container {
        position: relative;
        margin-bottom: 20px;
    }
   
    .input-container input {
        width: 100%;
        padding: 10px 15px;
        padding-right: 40px;
        font-size: 14px;
        border: 1px solid #d5d7d6;
        border-radius: 20px;
    }
   
    .input-container input::placeholder {
        color: #a09f9f;
        opacity: 1;
    }
   
    .icon .input-icon {
        width: 16px;
        height: 22px;
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
    }
   
    .linkcard-button {
        font-family: 'TTForsRegular', sans-serif;
        color: #4f68d9;
        background-color:#ffffff;
        font-size: 15px;
        padding: 10px;
        border: 1px solid #d5d7d6;
        border-radius: 20px;
        cursor: pointer;
        width: 100%;
        margin-bottom: 13px;
    }
   
    .register-button {
        background-color: #4f68d9;
        color: #ffffff;
        font-size: 15px;
        padding: 10px;
        border: 1px solid #d5d7d6;
        border-radius: 20px;
        cursor: pointer;
        width: 100%;
        font-family: 'TTForsRegular', sans-serif;
    }

    .horizontal-line {
        height: 1px; 
        background-color: #a9a7a7;
        border: none;
        margin: 25px 0;
    }

    .done-text {
        color: #13ab25;
    }

    .none-text {
        color: #b50a0a;
    }

    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
    .popup-message {
        position: absolute;
        top: 8.5%; /* Center vertically */
        left: 98%; /* Center horizontally */
        transform: translate(-50%, -50%); /* Adjust position to truly center */
        background-color: #f44336; /* Red background for error */
        color: white;
        padding: 15px;
        padding-left: 25px;
        border-radius: 8px;
        font-family: Arial, sans-serif;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        z-index: 1000;
        transition: opacity 0.5s ease; /* Transition for smooth fading */
        opacity: 0; /* Start hidden */
        width: 18em;
    }

    /* Class to show the popup */
    .popup-message.show {
        display: block; /* Show the popup */
        opacity: 1; /* Make it visible */
    }

    /* Class to hide the popup */
    .popup-message.hide {
        opacity: 0; /* Fade out */
    }
    .popup-overlay {
        position: fixed; /* Fixed to ensure it stays centered on screen */
        top: 50%; /* Center vertically */
        left: 55%; /* Center horizontally */
        transform: translate(-50%, -50%); /* Adjust position to truly center */
        background-color: rgba(0, 0, 0, 0.4); /* Green background for success */
        color: #13ab25;
        padding: 15px 25px; /* Add padding for spacing */
        border-radius: 8px;
        font-family: "PoppinsMedium";
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        z-index: 999;
        transition: opacity 0.5s ease; /* Smooth fading transition */
        opacity: 0; /* Start hidden */
        width: 110%;
        height: 100%;
        text-align: center; /* Center text within the popup */
        font-size: 20px;
        font-weight: 400;
        display: none;
        backdrop-filter: blur(5px);
    }

    /* Class to show the popup */
    .popup-overlay.show {
        display: block; /* Show the popup */
        opacity: 1; /* Make it visible */
    }

    /* Class to hide the popup */
    .popup-overlay.hide {
        opacity: 0; /* Fade out */
    }
    .choice-reg {
        font-weight: 400;
        margin-top: 10px;
        margin-bottom: 30px;
        font-size: 0.9em;
        color: #555;
        text-align: center;
        font-family: 'TTNormsRegular', sans-serif;
    }
    .check-image {
        width: auto;
        height: 3em;
    }
    .popup-success {
        position: relative; /* Fixed to ensure it stays centered on screen */
        top: 50%; /* Center vertically */
        left: 50%; /* Center horizontally */
        transform: translate(-50%, -50%); /* Adjust position to truly center */
        background-color: white; /* Green background for success */
        color: #13ab25;
        padding: 15px 25px; /* Add padding for spacing */
        border-radius: 8px;
        font-family: "PoppinsMedium";
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        width: 20em;
        text-align: center; /* Center text within the popup */
        font-size: 20px;
        font-weight: 400;
    }
    .rfid-inp {
        opacity: 1;
        cursor:;
    }
    #confirmRfidButton, #rfidInputPopupField{
        cursor: default;
    }
    .popup-link {
        position: relative; /* Fixed to ensure it stays centered on screen */
        top: 46.5%; /* Center vertically */
        left: 48%; /* Center horizontally */
        transform: translate(-50%, -50%); /* Adjust position to truly center */
        background-color: white; /* Green background for success */
        color: black;
        padding: 15px 25px; /* Add padding for spacing */
        border-radius: 25px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        width: 20em;
        height: 22em;
        text-align: center; /* Center text within the popup */
        font-size: 20px;
        z-index: 1000;
    }
    .popup-link h2{
        color: #4f68d9;
        font-family: "PoppinsMedium";
        font-weight: 700;
    }
    .popup-link p {
        font-family: "TTForsRegular";
        font-weight: 300;
        font-size: 18px;
    }
    .rfid-image {
        width: auto;
        height: 13.5em;
        position: relative;
        margin-top: -4em;
    }
    #closeRfidPopupButton {
        position: absolute;
        bottom: 1%;
        left: 50%; /* Center horizontally */
        transform: translate(-50%, -50%);
        background-color: white ;
        color: #black;
        font-size: 15px;
        padding: 10px;
        border: 1px solid #4f68d9;
        border-radius: 20px;
        cursor: pointer;
        width: 10em;
        font-family: 'TTForsRegular', sans-serif;
    }
    #closeRfidPopupButton:hover {
        background-color: #4f68d9;
        color: #ffffff;
        font-size: 15px;
        padding: 10px;
        border: 1px solid #d5d7d6;
    }
</style>
       
<body>
    <div id="userExistsPopup" class="popup-message">
        User already exists. Please try again.
    </div>

    
    <div id="registrationSuccessPopup" class="popup-overlay">
        <div class = "popup-success">
            Account created successfully!
            <img src="~/images/Check icon.png" class = "check-image" alt="Check">
        </div>  
    </div>

    <div class="popup-message" id="rfidPopup" style="display: none;"></div>

    <div class="container">
        <div class="left-side">
            <div class="image-container">
                <!-- Add image or leave blank for background image -->
            </div>
        </div>

        <div class="right-side">
            <div class="Register-Input">
                <h2 class="register-title">Register an Account</h2>

                <form class="register-form" asp-action="Signup" method="post" onsubmit="return validateForm()">
                    <div id="rfidInputPopup" class="popup-overlay" style="display: none;">
                        <div class="popup-link">
                            <h2>RFID Card Linking</h2>
                            <p>Please scan your RFID Card in the scanner.</p>
                            <div class = "rfid-inp">
                                <input asp-for="rfid" id="rfidInputPopupField" type="password" autocomplete="off" placeholder="Scan RFID" />
                                <button type="button" id="confirmRfidButton">Confirm RFID</button>
                                <button type="button" id="closeRfidPopupButton">Close</button>
                                <img src="~/images/rfid-icon.png" class="rfid-image" alt="rfid">
                            </div>
                        </div>
                    </div>
                    <label for="name" class="form-label">Name</label>
                    <div class="input-container">
                        <input type="text" id="name" placeholder="Name" asp-for="Name" required />
                    </div>

                    <label for="studentNumber" class="form-label">Student Number</label>
                    <div class="input-container">
                        <input type="number" id="studentNumber" placeholder="Student Number" asp-for="StudentNumber" required />
                    </div>

                    <label for="course" class="form-label">Course</label>
                    <div class="input-container">
                        <input type="text" id="course" placeholder="Course" asp-for="Course" required />
                    </div>

                    <label for="email" class="form-label">Email Address</label>
                    <div class="input-container">
                        <input type="email" 
                            id="email" 
                            placeholder="Email Address" 
                            asp-for="Email" 
                            pattern="[^@@\s]+@@plm\.edu\.ph"
                            title="Only PLM email addresses are allowed"
                            autocomplete="off"
                            required 
                        />
                        <span class="icon">
                            <img src="~/images/Email Icon.png" alt="Email Icon" class="input-icon">
                        </span>
                    </div>


                    <label for="password" class="form-label">Password</label>
                    <div class="input-container">
                        <input type="password" id="password" placeholder="Password" asp-for="Password" required />
                        <span class="icon" onclick="togglePassword()">
                            <img src="/images/Password-hide-Icon.png" alt="Password Icon" class="input-icon" id="password-toggle-icon">
                        </span>
                    </div>

                    <div class="horizontal-line"></div>

                    <button type="button" class="linkcard-button" id="scanButton">Link RFID Card</button>
                    <div id="rfidStatus" style ="display: none;"></div>

                    <button type="submit" class="register-button">Register Now</button>
                    <p class="choice-reg">Already have an account? <a href="/Account/Input" style="text-decoration: none;">Login</a></p>
                </form>
            </div>
        </div>
    </div>

    <script>
        window.addEventListener("DOMContentLoaded", (event) => {
            // Check if the popup should be shown
            @if (TempData["UserAlreadyExists"] != null && (bool)TempData["UserAlreadyExists"] == true)
            {
                <text>
                    const popup = document.getElementById("userExistsPopup");
                    popup.classList.add("show"); // Show the popup
                    setTimeout(() => {
                        popup.classList.remove("show"); // Hide the popup
                        popup.classList.add("hide"); // Add hide class for fade out
                        setTimeout(() => {
                            popup.style.display = "none"; // Set display to none after fade out
                        }, 500); // Wait for the fade out transition before setting to none
                    }, 4000);
                </text>
            }
        });
        window.addEventListener("DOMContentLoaded", (event) => {
            // Check if the success popup should be shown
            @if (TempData["RegistrationSuccess"] != null && (bool)TempData["RegistrationSuccess"] == true)
            {
                <text>
                    const popup = document.getElementById("registrationSuccessPopup");
                    popup.classList.add("show"); // Show the success popup
                    setTimeout(() => {
                        popup.classList.remove("show"); // Hide the popup
                        popup.classList.add("hide"); // Add hide class for fade out
                    }, 2500); // Display for 3 seconds
                    
                    // Redirect to Index after a delay
                    setTimeout(() => {
                        window.location.href = '@Url.Action("Input", "Account")';
                    }, 2500);
                </text>
            }
        });

        document.getElementById("scanButton").addEventListener("click", function() {
            const rfidInputPopup = document.getElementById("rfidInputPopup");
            rfidInputPopup.style.display = 'block'; // Show the RFID input popup
            rfidInputPopup.style.opacity = 1; // Make it visible
            document.getElementById("rfidInputPopupField").focus(); // Set focus on the RFID input field
        });

        // Confirm button click event for the RFID popup
        document.getElementById("confirmRfidButton").addEventListener("click", function() {
            const rfidInput = document.getElementById("rfidInputPopupField");
            const scannedRfid = rfidInput.value.trim(); // Get the value from the RFID input

            if (scannedRfid) {
                document.getElementById("scanButton").innerHTML = 'Link RFID Card: <span class="done-text">DONE</span>'; // Update button text to "DONE"
                document.getElementById("rfidStatus").textContent = "DONE"; // Show DONE status
                document.getElementById("rfidInputPopup").style.display = 'none'; // Hide the RFID input popup
            } else {
                // If the input is empty, set the button text to NONE
                document.getElementById("scanButton").innerHTML = 'Link RFID Card: <span class="none-text">NONE</span>'; // Keep the button text as NONE
            }
        });

        // Add event listener for the Enter key in the RFID input field
        document.getElementById("rfidInputPopupField").addEventListener("keydown", function(event) {
            if (event.key === "Enter") {
                event.preventDefault(); // Prevent default form submission
                document.getElementById("confirmRfidButton").click(); // Trigger the confirm button click
            }
        });

        // Close button click event for the RFID popup
        document.getElementById("closeRfidPopupButton").addEventListener("click", function() {
            document.getElementById("rfidInputPopup").style.display = 'none'; // Hide the RFID input popup
        });

        // Validate form
        function validateForm() {
            const rfid = document.getElementById("rfidInputPopupField").value;

            if (!rfid) {
                showPopup("Please link your RFID card before signing up."); // Use popup for incomplete RFID linking
                return false; // Prevent form submission
            }
        }
        function showPopup(message) {
            const popup = document.getElementById("rfidPopup");
            popup.textContent = message;
            popup.style.display = "block";
            popup.style.opacity = 1; // Make it visible

            setTimeout(() => {
                popup.style.opacity = 0; // Fade out
                setTimeout(() => {
                    popup.style.display = "none"; // Hide after fade out
                }, 500); // Wait for the fade out to complete
            }, 2000); // Display for 2 seconds
        }

        function togglePassword() {
            const passwordField = document.getElementById("password");
            const passwordIcon = document.getElementById("password-toggle-icon");
            if (passwordField.type === "password") {
                passwordField.type = "text";
                passwordIcon.src = "/images/Password-show-Icon.png"; // Change to open icon if available
            } else {
                passwordField.type = "password";
                passwordIcon.src = "/images/Password-hide-Icon.png"; // Change to closed icon if available
            }
        }

    </script>
</body>