@model List<Book>
@await Html.PartialAsync("_RfidPopup")
@{
    ViewBag.Title = "Book Management";
}
@{
    var userName = Context.Session.GetString("UserName");
}
@if (!string.IsNullOrEmpty(userName))
{
    <h2 style="display: none;">Welcome, @userName</h2>
}
else
{
    <h2 style="display: none;">Please log in to continue.</h2>
    <script>
        window.location.href = '@Url.Action("Input", "Account")';
    </script>
}

<style>
    body {
        margin: 0;
        padding: 0;
        background-image: url('/images/PLM-HOME.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        min-height: 100vh;
        display: block;
        justify-content: center;
        align-items: center;
    }

    /* Navbar Styling */
    .navbar-menu {
    display: flex;
    gap: 50px;
    align-items: center;
    position: fixed; /* Change from absolute to fixed */
    top: 0; /* Aligns the navbar to the top of the screen */
    width: 100%; /* Makes the navbar span the full width */
    background-color: #fff; /* Optional: Add background color */
    padding: 1em; /* Add padding if needed */
    z-index: 999; /* Ensure it stays on top */
    justify-content: center; /* Centers content */
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1); /* Optional: Add shadow */
}

    .navbar-menu a {
        text-decoration: none;
        color: #2e2c2b;
        font-family: 'MontserratSemiBold';
        font-size: 20px;
        font-weight: bold;
        transition: color 0.3s ease;
    }

    .navbar-menu a.active {
        color: #DAA520;
        font-size: 28px;
    }

    /* Return Container Styling */
    .return-container {
        width: 90%;
        max-width: 1200px;
        background-color: #ffffff;
        border-radius: 12px;
        padding: 30px;
        margin-top: 50px;
        box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.15);
        overflow-y: auto;
        max-height: 65vh;
        border: 1px solid #a9a7a7;
    }

    /* Search Bar Styling */
    .search-container {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
        max-width: 500px;
    }

    .search-bar {
        position: relative;
        width: 100%;
    }

    .search-bar input[type="text"] {
        width: 100%;
        padding: 10px 15px 10px 40px;
        border: 1px solid #333;
        border-radius: 24px;
        font-size: 16px;
        color: #333;
        outline: none;
    }

    .search-bar img {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        width: 20px;
        height: 20px;
        cursor: pointer;
    }

    /* Book Table Styling */
    .book-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 16px;
    }

    .book-table th, .book-table td {
        padding: 12px;
        text-align: center;
        font-family: 'PoppinsMedium', Arial, sans-serif;
        border-bottom: 1px solid #ddd;
        vertical-align: middle;
    }

    .book-table th {
         font-weight: bold;
    font-family: 'PoppinsMedium', Arial, sans-serif;
    background-color: #f9f9f9;
    position: sticky;
    top: 0;
    z-index: 2;
    }

    .book-cover {
        width: 60px;
        height: auto;
        display: block;
        margin: 0 auto;
    }

    .return-button {
        display: inline-block;
        padding: 8px 16px;
        background-color: #4a73e5;
        color: white;
        border: none;
        border-radius: 24px;
        font-family: 'PoppinsMedium', Arial, sans-serif;
        font-weight: bold;
        cursor: pointer;
        text-align: center;
    }

    .borrowed {
        color: red;
    }

    .available {
        color: green;
    }

    .buttons {
        cursor: pointer;
        width: 30px;
        height: auto;
    }
    .filter-icon {
        width: 20px;
        cursor: pointer;
    }
    .new-book-icon {
        width: 30px;
        cursor: pointer;
    }

.book-table th.add-book-column,
.book-table th.filter-column,
.book-table td.add-book-column,
.book-table td.filter-column {
    width: 50px; /* Adjust width to desired size */
    text-align: right; /* Align content to the right */
    padding-right: 10px; /* Add padding if necessary */
}

/* Ensure icons are properly sized */
.new-book-icon, .filter-icon {
    width: 20px;
    cursor: pointer;
    margin: 0; /* Remove any extra margin */
}

        .book-table-container {
        max-height: 50vh;
        overflow-y: auto;
        margin-top: 10px;
    }


</style>


<body>
    <div class="return-container">
        <div class="search-container">
            <label class="search-label">Search</label>
            <div class="search-bar">
                <input type="text" id="searchBar" placeholder="Search for books..." onkeyup="searchBooks()">
                <img src="/images/search-icon.png" alt="Search Icon">
            </div>
        </div>
    <div class="book-table-container">
        <table class="book-table">
            <thead>
                <tr>
                    <th>Book Cover</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Status</th>
                    <th><a href="NewBookInformation"><img src="/images/newbook.png" alt="Add New Book" class="new-book-icon"></a></th>
                    <th><img src="/images/filter.png" alt="Filter" class="filter-icon"></th>
                </tr>
            </thead>
            <tbody id="bookTableBody">
                @if (Model != null && Model.Any())
                {
                    foreach (var book in Model)
                    {
                        <tr>
                            <td><img src="@(book.BookCoverUrl ?? "/path/to/default-image.jpg")" alt="Book Cover" class="book-cover"></td>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                            <td class="@(book.Availability == "Available" ? "available" : "borrowed")">@book.Availability</td>
                            
                            <td><!-- Edit button with routing to the Edit action -->
                    <a asp-action="NewBookInformation" asp-controller="Account" asp-route-id="@book.BookId">
                        <img src="/images/edit.png" alt="Edit" class="buttons">
                    </a></td>

                    
                            <td> <!-- Delete button with routing to the Delete action -->
                    <a asp-action="DeleteBook" asp-controller="Account" asp-route-id="@book.BookId" onclick="return confirm('Are you sure you want to delete this book?');">
                        <img src="/images/delete.png" alt="Delete" class="buttons">
                    </a></td>


                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">No books available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

    <script>
        function searchBooks() {
            var input = document.getElementById("searchBar").value.toLowerCase();
            var rows = document.getElementById("bookTableBody").getElementsByTagName("tr");

            for (var i = 0; i < rows.length; i++) {
                var title = rows[i].getElementsByTagName("td")[1].textContent.toLowerCase();
                var author = rows[i].getElementsByTagName("td")[2].textContent.toLowerCase();

                if (title.includes(input) || author.includes(input)) {
                    rows[i].style.display = "";
                } else {
                    rows[i].style.display = "none";
                }
            }
        }
    </script>
</body>