@{
    ViewBag.Title = "Profile";
}
@await Html.PartialAsync("_RfidPopup")
@{
    var userName = Context.Session.GetString("UserName");
    var studentId = Context.Session.GetString("StudentId");
    var course = Context.Session.GetString("Course");
    var email = Context.Session.GetString("Email");
    var libId = Context.Session.GetInt32("UserId");
    var dateIssued = Context.Session.GetString("DateIssued");
    var contactNum = Context.Session.GetString("ContactNumber");
}

@if (!string.IsNullOrEmpty(userName))
{
    <h2 style = "display: none;">Welcome, @userName</h2>
}
else
{
    <h2 style = "display: none;">Please log in to continue.</h2>
    <script>
        window.location.href = '@Url.Action("Input", "Account")';
    </script>
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

<style>

    /* Body Styling */
    body {
        margin: 0;
        padding: 0;
        background-image: url('/images/PLM-HOME.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        min-height: 100vh;
        display: block;
        justify-content: center;
        align-items: center;
    }

    .navbar-menu {
        display: flex;
        gap: 50px;
        align-items: center;
        position: absolute;
        top: 2em;
        z-index: 998;
        left: 50.5em;
    }

    .navbar-menu a {
        text-decoration: none;
        color: #2e2c2b;
        font-family: 'MontserratSemiBold';
        font-size: 20px;
        font-weight: bold;
        transition: color 0.3s ease;
    }

    .navbar-menu .highlight {
        color: #DAA520;
        font-size: 28px;
        font-family: 'MontserratSemiBold';
    }

    .navbar-menu a:hover {
        color: #DAA520;
    }

    /* Library Card Styling */
    .libcard-page {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }
    .library-card-container {
        width: 90%;
        background-color: #ffffff;
        border-radius: 35px;
        padding: 20px;
        margin-top: 50px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        border: 1px solid #a9a7a7;
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 70vh;
    }

    .header {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        gap: 8em;
        transform: scale(1.089);
    }

    .university-info {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .university-info img {
        width: 75px;
        height: 75px;
    }

    .university-text {
        color: #505053;
        font-family: 'FrauncesSemiBold', Arial, sans-serif;
    }

    .university-text h2 {
        font-size: 20px;
        margin: 0;
        color: #d7a613;
        font-family: 'FrauncesSemiBold', Arial, sans-serif;
    }

    .university-text p {
        font-size: 16px;
        margin: 0;
        color: #505053;
        font-family: 'PoppinsMedium', Arial, sans-serif;
    }

    .card-title {
        font-size: 28px;
        font-weight: bold;
        font-family: 'PoppinsMedium', Arial, sans-serif;
        color: #000;
    }
    .card-title h2 {
        font-weight: 800;
    }

    /* Main Content */
    .card-content {
        display: flex;
        gap: 30px;
    }

    .profile-pic {
        width: 15em;
        height: 15em;
        border-radius: 10px;
        background-color: #e0e0e0;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid black;
        margin-left: 50px;
    }

    .profile-pic img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 10px;
    }

    .details {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 2px;
    }
    .details h2 {
        font-weight: bold;
        font-size: 35px;
        font-family: 'PoppinsMedium', Arial, sans-serif; 
    }

    /* Label and Content Alignment */
    .details p {
        font-size: 22px;
        margin: 3px 0;
        color: #000;
        display: flex;
        align-items: center; 
        font-family: 'PoppinsMedium', Arial, sans-serif; 
    }

    .details p strong {
        color: #000;
        min-width: 200px; 
        text-align: left;
        padding-right: 10px; 
        font-family: 'PoppinsMedium', Arial, sans-serif; 
    }

    .details p span {
        flex-grow: 1; /* Ensures the value takes up remaining space */
        text-align: left; /* Aligns text to the left */
        font-family: 'PoppinsMedium', Arial, sans-serif; 
    }

    /* Barcode Section */
    .barcode-section {
        position: absolute;
        bottom: 20px;
        right: 20px;
        width: 200px;
        height: 60px;
    }

    .barcode-section img {
        width: 20em;
        height: auto;
        position: absolute;
        bottom: 3.5em;
        right: 12em;
    }

    .date-info {
        margin-top: 60px;
        font-family: 'MontserratSemiBold', Arial, sans-serif;
        display: flex;
        flex-direction: row;
    }
    .back-button {
        padding: 5px 28px;
        background-color: #ff4444;
        color: white;
        border: none;
        border-radius: 24px;
        font-family: 'PoppinsMedium';
        font-weight: bold;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        position: relative;
        font-size: 24px;
        width: 6em;
    }
    .save-button {
        padding: 5px 28px;
        background-color: #4f68d9;
        color: white;
        border: none;
        border-radius: 24px;
        font-family: 'PoppinsMedium';
        font-weight: bold;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        position: relative;
        font-size: 24px;
        width: 6em;
    }
    .button-container {
        margin-left: 10em;
        gap: 1em;
        display: flex;
    }
</style>

<body>
    <div class="navbar-menu">
        <a href="Welcome">HOME</a>
        <a href="Return">RETURN</a>
        <a href="#" onclick="showRfidPopup()">BORROW</a>
        <a href="Search">SEARCH</a>
        <a href="Profile" class="highlight">PROFILE</a>
    </div>

<div class="libcard-page">
    <div class="library-card-container">
        <div class="header">
            <div class="university-info">
                <img src="/images/PLM-LOGO.png" alt="University Logo">
                <div class="university-text">
                    <h2>PAMANTASAN NG LUNGSOD NG MAYNILA</h2>
                    <p>UNIVERSITY OF THE CITY OF MANILA</p>
                </div>
            </div>
            <div class = "card-title">
                <h2>University Library Card</h2>
            </div>
        </div>
        

        <div class="card-content">
            <div class="profile-pic">
                <img src="~/images/pfp.png" alt="Profile Picture">
            </div>
            <div class="details">
                <h2>@userName</h2>
                <p><strong>Library Card ID</strong> <span>: @libId</span></p>
                <p><strong>Student ID</strong> <span>: @studentId</span></p>
                <p><strong>Course</strong> <span>: @course</span></p>
                <p><strong>Email</strong> <span>: @email</span></p>
                <p><strong>Contact Number:</strong> @(string.IsNullOrEmpty(contactNum) || contactNum == "NA" ? "--NOT SET--" : contactNum)</p>

                <div class="date-info">
                    <p><strong>Date Issued:</strong> <span>@dateIssued</span></p>
                    <div class="button-container">
                        <button type="button" class="save-button" onclick="saveLibraryCard()">Save</button>
                        <button type="button" class="back-button" onclick="window.history.back()">Back</button>
                    </div>
                </div>
            </div>
            @* <div class="barcode-section">
                <img src="~/images/barcode.png" alt="Barcode">
            </div> *@
        </div>

        
    </div>
</div>
<script>
function saveLibraryCard() {
    // Select the library card container
    const cardContainer = document.querySelector('.library-card-container');

    html2canvas(cardContainer, {
        onclone: function (clonedDoc) {
            // Hide only the buttons inside the cloned `.date-info` div
            clonedDoc.querySelectorAll('.date-info button').forEach(button => button.style.display = 'none');
        }
    }).then(canvas => {
        // Create a link element to download the image
        const link = document.createElement('a');
        link.download = 'library_card.png';
        link.href = canvas.toDataURL('image/png');
        link.click();
    });
}
</script>


</body>